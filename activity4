<script type="text/javascript">
function first()
{
var variant3 = Number(document.getElementById("Coffee").value);
var pool;
if (isNaN(variant3))
{
alert("Invalid")
}
else
{
if (variant3 > 49)
pool = variant3 - 50
{
document.getElementById("result").innerHTML = "Thankyou for comming";
document.getElementById("result1").innerHTML = pool;
}
}
}
function second()
{
var variant2 = Number(document.getElementById("Coffee").value);
var john;
